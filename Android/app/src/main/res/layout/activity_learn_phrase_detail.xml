<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.learn.phrase.LearnPhraseDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_phoneme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_phrase_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn_4"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/font"
        app:layout_constraintTop_toBottomOf="@+id/tb_phoneme"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/ic_phrase_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”—"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@+id/tv_phrase_detail_main"
        app:layout_constraintBottom_toBottomOf="@+id/tv_phrase_detail_main"
        app:layout_constraintEnd_toStartOf="@+id/tv_phrase_detail_main"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/tv_phrase_detail_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ã„±"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phrase_detail_title"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btn_order"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/order1"
        android:textColor="@color/font"
        android:textSize="12sp"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="@+id/tv_phrase_detail_main"
        app:layout_constraintBottom_toBottomOf="@+id/tv_phrase_detail_main"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:drawableEnd="@drawable/ic_order_size"
        android:textAllCaps="false"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_phrase_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_phrase_detail_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedHeight="true"
        android:layout_marginTop="30dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/phrase_detail_item"
        android:layout_marginHorizontal="30dp"
        android:clipToPadding="false"
        android:paddingBottom="20dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_phrase_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/btn_up"
        android:backgroundTint="@color/main"
        app:fabSize="normal"
        app:borderWidth="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>