<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:paddingHorizontal="5dp">
    <ImageView
        android:id="@+id/iv_sign_back"
        android:layout_width="105dp"
        android:layout_height="170dp"
        android:src="@drawable/bg_sign"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_hand"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sign_back"
        app:layout_constraintEnd_toEndOf="@+id/iv_sign_back"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/iv_sign_back"
        app:layout_constraintTop_toTopOf="@+id/iv_sign_back"
        app:layout_constraintVertical_bias="0.3"
        tools:src="@drawable/ja1" />

    <TextView
        android:id="@+id/tv_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sign_back"
        app:layout_constraintEnd_toEndOf="@+id/iv_sign_back"
        app:layout_constraintStart_toStartOf="@+id/iv_sign_back"
        app:layout_constraintTop_toBottomOf="@+id/iv_hand"
        app:layout_constraintVertical_bias="0.384"
        tools:text="ã„±" />


</androidx.constraintlayout.widget.ConstraintLayout>