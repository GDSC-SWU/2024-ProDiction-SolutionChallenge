<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">
    <TextView
        android:id="@+id/tv_login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_text1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_login2"
        app:layout_constraintEnd_toEndOf="@+id/tv_login2"
        app:layout_constraintBottom_toTopOf="@+id/tv_login2"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="@color/font"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/tv_login2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_login1"
        app:layout_constraintStart_toStartOf="@+id/iv_logo"
        app:layout_constraintEnd_toEndOf="@+id/iv_logo"
        app:layout_constraintBottom_toTopOf="@id/iv_logo"
        android:layout_marginBottom="15dp"
        android:textColor="#264A74"
        android:textSize="19sp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_main_logo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>