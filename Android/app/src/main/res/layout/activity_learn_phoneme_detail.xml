<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.learn.LearnPhonemeDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_phoneme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/font"/>

    <ImageView
        android:id="@+id/iv_video1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/iv_video2"
        android:src="@drawable/btn_video1"
        android:scaleType="fitCenter"
        android:layout_marginTop="80dp" />

    <ImageView
        android:id="@+id/iv_video2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toEndOf="@id/iv_video1"
        app:layout_constraintTop_toTopOf="@+id/iv_video1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_video1"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/btn_video2"
        android:scaleType="fitCenter"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>