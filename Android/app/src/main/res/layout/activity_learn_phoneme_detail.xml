<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.learn.phoneme.LearnPhonemeDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_phoneme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/font"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeTextType="uniform"
        android:maxLines="2"
        android:paddingHorizontal="20dp"/>

    <ImageView
        android:id="@+id/iv_video1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_video1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_video2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.209" />

    <ImageView
        android:id="@+id/iv_video2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toEndOf="@id/iv_video1"
        app:layout_constraintTop_toTopOf="@+id/iv_video1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_video1"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/btn_video2"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/tv_learn_record_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btn_record"
        app:layout_constraintStart_toStartOf="@+id/btn_record"
        app:layout_constraintEnd_toEndOf="@+id/btn_record"
        android:text="@string/onboarding_2_1_btn_text"
        android:textColor="@color/main"
        android:textSize="16sp"
        android:layout_marginBottom="15dp"/>

    <ImageButton
        android:id="@+id/btn_record"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/btn_listen"
        android:scaleType="centerCrop"
        android:enabled="true"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="140dp" />

    

</androidx.constraintlayout.widget.ConstraintLayout>