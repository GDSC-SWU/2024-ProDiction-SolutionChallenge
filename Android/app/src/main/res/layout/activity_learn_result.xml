<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.learn.LearnResultActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_phoneme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=""
                android:paddingHorizontal="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="100dp"
                android:textSize="27sp"
                android:textColor="@color/font"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_your"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/your_pron"
                android:textSize="13sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_result"
                android:layout_marginTop="40dp"/>


            <ImageView
                android:id="@+id/iv_your_video1"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_video1"
                app:layout_constraintEnd_toStartOf="@+id/iv_your_video2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_your" />

            <ImageView
                android:id="@+id/iv_your_video2"
                android:layout_width="0dp"
                android:layout_height="110dp"
                app:layout_constraintStart_toEndOf="@id/iv_your_video1"
                app:layout_constraintTop_toTopOf="@+id/iv_your_video1"
                app:layout_constraintBottom_toBottomOf="@+id/iv_your_video1"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/btn_video2"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_your_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/iv_your_video1"
                app:layout_constraintTop_toBottomOf="@+id/iv_your_video1"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                tools:text="[     힐랑     ]"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/correct_pron"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_your_result"
                android:layout_marginTop="40dp"/>

            <ImageView
                android:id="@+id/iv_correct_video1"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_video1"
                app:layout_constraintEnd_toStartOf="@+id/iv_correct_video2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_correct" />

            <ImageView
                android:id="@+id/iv_correct_video2"
                android:layout_width="0dp"
                android:layout_height="110dp"
                app:layout_constraintStart_toEndOf="@id/iv_correct_video1"
                app:layout_constraintTop_toTopOf="@+id/iv_correct_video1"
                app:layout_constraintBottom_toBottomOf="@+id/iv_correct_video1"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/btn_video2"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standard"
                android:textSize="8sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_correct_result"
                app:layout_constraintBottom_toBottomOf="@+id/tv_correct_result"
                android:layout_marginStart="30dp" />


            <TextView
                android:id="@+id/tv_correct_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_c"
                app:layout_constraintTop_toBottomOf="@+id/iv_correct_video1"
                android:layout_marginStart="3dp"
                android:layout_marginTop="15dp"
                tools:text="[    힐링    ]"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_retest"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:text="@string/repro"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="normal"
                android:background="@drawable/bg_background_round_on"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_correct_result"
                app:layout_constraintEnd_toStartOf="@+id/btn_add"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="50dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:text="@string/add"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="normal"
                android:background="@drawable/bg_background_round_on"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_correct_result"
                app:layout_constraintStart_toEndOf="@+id/btn_retest"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:textAllCaps="false"/>

            <View
                android:id="@+id/v_line_result"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8ECEF"
                app:layout_constraintTop_toBottomOf="@+id/btn_retest"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/tv_record_result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/v_line_result"
                app:layout_constraintStart_toStartOf="@+id/btn_record_result"
                app:layout_constraintEnd_toEndOf="@+id/btn_record_result"
                android:text="@string/real_spead"
                android:textColor="@color/main"
                android:textSize="14sp"
                android:layout_marginTop="60dp"
                android:textAlignment="center"/>

            <ImageButton
                android:id="@+id/btn_record_result"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/btn_listen"
                android:scaleType="centerCrop"
                android:enabled="true"
                android:background="#00ff0000"
                app:layout_constraintTop_toBottomOf="@+id/tv_record_result"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_result_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textSize="27sp"
                android:textColor="@color/font"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_record_result"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="30dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>