<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.learn.word.LearnWordDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_phoneme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_word_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn_3"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/font"
        app:layout_constraintTop_toBottomOf="@+id/tb_phoneme"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/ic_word_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”—"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@+id/tv_word_detail_main"
        app:layout_constraintBottom_toBottomOf="@+id/tv_word_detail_main"
        app:layout_constraintEnd_toStartOf="@+id/tv_word_detail_main"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/tv_word_detail_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ã„±"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_word_detail_title"
        android:layout_marginTop="30dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_word_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_word_detail_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/word_detail_item" />

</androidx.constraintlayout.widget.ConstraintLayout>