<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.learn.SearchActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/myEditText"
            android:background="@drawable/bg_background_round_search"
            android:layout_marginEnd="7dp"
            android:drawableEnd="@drawable/ic_search_gray_size"
            android:layout_marginVertical="5dp"
            android:drawablePadding="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="13dp"
            android:textSize="14sp"
            android:textColor="@color/gray2"
            android:singleLine="true"
            android:imeOptions="actionDone"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/tv_recent_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/gray2"
        android:text="@string/recent_search"
        app:layout_constraintTop_toBottomOf="@+id/tb_search"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_search"
        android:textColor="#B8B8B8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recent_search"
        android:layout_marginEnd="30dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_recent_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/search_recent_item"
        android:layout_marginHorizontal="30dp"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>