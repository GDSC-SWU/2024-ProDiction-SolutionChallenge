<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp" >
            <View
                android:id="@+id/v_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/ic_profile"
                android:layout_marginTop="70dp"/>


            <LinearLayout
                android:id="@+id/layout_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/v_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/now"
                    android:textColor="@color/font"
                    android:textStyle="bold"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_background_round_level"
                    android:text="Word"
                    android:paddingHorizontal="7dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level"
                    android:textColor="@color/font"
                    android:textStyle="bold"
                    android:textSize="17sp"/>


            </LinearLayout>



            <TextView
                android:id="@+id/tv_retest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retest"
                app:layout_constraintStart_toStartOf="@+id/layout_level"
                app:layout_constraintEnd_toEndOf="@+id/layout_level"
                app:layout_constraintTop_toBottomOf="@+id/layout_level"
                android:layout_marginTop="7dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/main"/>

            <View
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_retest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#E8ECEF"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tv_word_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_list"
                app:layout_constraintTop_toBottomOf="@+id/v_line"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/sub1"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/btn_my_1"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:src="@drawable/btn_word_list"
                android:scaleType="fitCenter"
                android:background="#00ff0000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_word_list"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learn_1"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/font"
                app:layout_constraintBottom_toBottomOf="@+id/btn_my_1"
                app:layout_constraintEnd_toEndOf="@+id/btn_my_1"
                app:layout_constraintStart_toStartOf="@+id/btn_my_1"
                app:layout_constraintTop_toTopOf="@+id/btn_my_1"
                app:layout_constraintVertical_bias="0.416" />

            <ImageButton
                android:id="@+id/btn_my_2"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:src="@drawable/btn_word_list"
                android:scaleType="fitCenter"
                android:background="#00ff0000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_my_1"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learn_2"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/font"
                app:layout_constraintBottom_toBottomOf="@+id/btn_my_2"
                app:layout_constraintEnd_toEndOf="@+id/btn_my_2"
                app:layout_constraintStart_toStartOf="@+id/btn_my_2"
                app:layout_constraintTop_toTopOf="@+id/btn_my_2"
                app:layout_constraintVertical_bias="0.416" />

            <ImageButton
                android:id="@+id/btn_my_3"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:src="@drawable/btn_word_list"
                android:scaleType="fitCenter"
                android:background="#00ff0000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_my_2"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learn_3"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/font"
                app:layout_constraintBottom_toBottomOf="@+id/btn_my_3"
                app:layout_constraintEnd_toEndOf="@+id/btn_my_3"
                app:layout_constraintStart_toStartOf="@+id/btn_my_3"
                app:layout_constraintTop_toTopOf="@+id/btn_my_3"
                app:layout_constraintVertical_bias="0.416" />

            <ImageButton
                android:id="@+id/btn_my_4"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:src="@drawable/btn_word_list"
                android:scaleType="fitCenter"
                android:background="#00ff0000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_my_3"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learn_4"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/font"
                app:layout_constraintBottom_toBottomOf="@+id/btn_my_4"
                app:layout_constraintEnd_toEndOf="@+id/btn_my_4"
                app:layout_constraintStart_toStartOf="@+id/btn_my_4"
                app:layout_constraintTop_toTopOf="@+id/btn_my_4"
                app:layout_constraintVertical_bias="0.416" />

            <ImageButton
                android:id="@+id/btn_my_5"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:src="@drawable/btn_word_list"
                android:scaleType="fitCenter"
                android:background="#00ff0000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_my_4"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learn_5"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/font"
                app:layout_constraintBottom_toBottomOf="@+id/btn_my_5"
                app:layout_constraintEnd_toEndOf="@+id/btn_my_5"
                app:layout_constraintStart_toStartOf="@+id/btn_my_5"
                app:layout_constraintTop_toTopOf="@+id/btn_my_5"
                app:layout_constraintVertical_bias="0.416" />

            <View
                android:id="@+id/v_line_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_my_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#E8ECEF"
                android:layout_marginTop="25dp" />

            <TextView
                android:id="@+id/tv_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/support"
                app:layout_constraintTop_toBottomOf="@+id/v_line_2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/sub1"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/center"
                app:layout_constraintTop_toBottomOf="@+id/tv_support"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_center"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/font"
                android:paddingVertical="5dp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@id/iv_center"
                android:layout_width="20dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="@+id/tv_center"
                app:layout_constraintBottom_toBottomOf="@+id/tv_center"
                android:src="@drawable/ic_my_right"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/tv_center"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/language_setting"
                app:layout_constraintTop_toBottomOf="@+id/tv_center"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_setting"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/font"
                android:paddingVertical="5dp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@id/iv_setting"
                android:layout_width="20dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="@+id/tv_setting"
                app:layout_constraintBottom_toBottomOf="@+id/tv_setting"
                android:src="@drawable/ic_my_right"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/tv_setting"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"/>

            <View
                android:id="@+id/v_line_3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#E8ECEF"
                android:layout_marginTop="25dp" />

            <TextView
                android:id="@+id/tv_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my"
                app:layout_constraintTop_toBottomOf="@+id/v_line_3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/sub1"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                app:layout_constraintTop_toBottomOf="@+id/tv_my"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/font"
                android:textAlignment="textStart"
                android:padding="0dp"
                android:background="#00ff0000"
                android:paddingVertical="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/language_setting"
                app:layout_constraintTop_toBottomOf="@+id/tv_logout"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/font"
                android:paddingVertical="5dp"
                android:layout_marginTop="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="test" />

</androidx.constraintlayout.widget.ConstraintLayout>